{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                      
    "paths": {
      "@/*": [
        "src/*",                         // prima guarda in src
        "./*"                            // poi guarda nella root (per roba vecchia)
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
